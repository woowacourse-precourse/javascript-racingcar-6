{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-depth": ["error", 2],

    // esm 사용을 위한 침묵
    "import/extensions": "off",

    // validate 은닉을 위한 침묵
    "class-methods-use-this": "off"
  }
}
